@using OnlineOrganizationManagementSystem.Models.ViewModels
@model UserCreateViewModel

<h2>Create User</h2>

<form asp-controller="Usermanagement" asp-action="Create" method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="Role" asp-items="@ViewBag.Roles" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>