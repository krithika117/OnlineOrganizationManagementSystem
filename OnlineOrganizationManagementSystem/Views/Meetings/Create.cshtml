@model OnlineOrganizationManagementSystem.Models.Meeting

@{
    ViewData["Title"] = "Create Meeting";
}


<div class="row justify-content-center">
    <div class="col-md-7 p-5 card mt-2 border-0 shadow">
    <h2 class="my-3 fw-bolder">@ViewData["Title"]</h2>
    <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="EventType" class="control-label"></label>
                <input asp-for="EventType" class="form-control" value="Meeting" readonly/>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group my-2">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="w-100 btn btn-lg mt-2 btn-primary" />
                <a asp-action="Index" class="w-100 btn btn-lg mt-2 btn-primary">Back to List</a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
