@using Microsoft.AspNetCore.Identity;
@model OnlineOrganizationManagementSystem.Models.AttendanceRecord
@inject UserManager<IdentityUser> userManager;
@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="col-md-7 p-5 card mt-2 border-0 shadow">
        <h2 class="my-3 fw-bolder">Create Record</h2><hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="PresenceStatus" class="control-label"></label>
                <select asp-for="PresenceStatus" class="form-control">
                    <option value="Present">Present</option>
                    <option value="Absent">Absent</option>
                </select>
                <span asp-validation-for="PresenceStatus" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2 d-none">
                <label asp-for="DateRecord" class="control-label"></label>
                <input asp-for="DateRecord" class="form-control" value="@DateTime.Now"/>
                <span asp-validation-for="DateRecord" class="text-danger"></span>
            </div>
            <div class="form-group my-2 d-none">
                <input asp-for="UserId" class="form-control" value="@userManager.GetUserId(User)" readonly/>
            </div>
            <div class="form-group my-2">
          
                <input type="submit" value="Create" class="w-100 btn btn-lg mt-2 btn-primary" />
                <a asp-action="Index" class="w-100 btn btn-lg mt-2 btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
