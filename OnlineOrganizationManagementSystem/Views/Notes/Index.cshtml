@model IEnumerable<OnlineOrganizationManagementSystem.Models.Notes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="card col-md-4 mb-4 ">
        <div class="card-header @item.Priority">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary float-right"><i class="fas fa-pencil-alt"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger float-right mr-2"><i class="fas fa-trash-alt"></i></a>
        </div>
    </div>
}
